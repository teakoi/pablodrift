void CheckCollision(){

//enemy on top:
if (Player X <= EnemyX && (PlayerX +carw) <= (EnemyX + truckw) &&
    PlayerY <= (EnemyY + truckh) {
    PlayerY = (EnemyY + truckh);}
//enemy below
else if (Player X <= EnemyX && (PlayerX +carw) <= (EnemyX + truckw) &&
    (PlayerY + carh) >= EnemyY) {
    (PlayerY + carh) = EnemyY; }
//enemy on front from top
else if (PlayerY >= EnemyY &&
        (PlayerY + carh)  >= (EnemyY + carh) &&
        (EnemyX <= (PlayerX + carw) {
        Player X = PlayerX - 1; }
// enemy on front from below
else if (Player Y >= EnemyY &&
        (Player Y + carh) <= (EnemyY + truckh) &&
        (Enemy X <= (PlayerX + carw) {
        Player X = PlayerX -1; }
}
